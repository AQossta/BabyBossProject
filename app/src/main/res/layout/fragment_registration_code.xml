<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.registration.RegistrationCodeFragment">


    <LinearLayout
        android:id="@+id/linearLayoutCodeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="118dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="КОД"
            android:fontFamily="@font/roboto_black"
            android:textStyle="bold"
            android:textColor="@color/neutral_dark"
            android:textSize="28dp"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txtDescCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Введите 5-х значный код, который мы \nотправили вам на WhatsApp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16dp"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:textColor="@color/grey_text_button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCode" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutCodeNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/linearLayoutCodeText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutCodeText">

        <EditText
            android:id="@+id/codeFirstNumber"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/background_edittext_code_8dp_circle"
            android:fontFamily="@font/roboto_regular"
            android:textSize="24dp"
            android:textStyle="normal"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:singleLine="true"
            android:cursorVisible="false" />

        <EditText
            android:id="@+id/codeSecondNumber"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/background_edittext_code_8dp_circle"
            android:fontFamily="@font/roboto_regular"
            android:textSize="24dp"
            android:layout_marginStart="12.5dp"
            android:textStyle="normal"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:singleLine="true"
            android:cursorVisible="false" />

        <EditText
            android:id="@+id/codeThirdNumber"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/background_edittext_code_8dp_circle"
            android:fontFamily="@font/roboto_regular"
            android:textSize="24dp"
            android:layout_marginStart="12.5dp"
            android:textStyle="normal"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:singleLine="true"
            android:cursorVisible="false" />

        <EditText
            android:id="@+id/codeFourthNumber"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/background_edittext_code_8dp_circle"
            android:fontFamily="@font/roboto_regular"
            android:textSize="24dp"
            android:textStyle="normal"
            android:layout_marginStart="12.5dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:singleLine="true"
            android:cursorVisible="false" />

        <EditText
            android:id="@+id/codeFifthNumber"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/background_edittext_code_8dp_circle"
            android:fontFamily="@font/roboto_regular"
            android:textSize="24dp"
            android:textStyle="normal"
            android:layout_marginStart="12.5dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:singleLine="true"
            android:cursorVisible="false" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tvTxtErrorTextPasswordAndServer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCodeNumbers"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutCodeNumbers">

        <TextView
            android:id="@+id/tvErrorTextPasswordAndServer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginHorizontal="24dp"
            android:text="Неверный код. Проверьте правильность"
            android:textColor="@color/error_red"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutCodeChangeNumberPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/tvTxtErrorTextPasswordAndServer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTxtErrorTextPasswordAndServer">

        <TextView
            android:id="@+id/changeNumberPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Изменить номер"
            android:fontFamily="@font/roboto_black"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="@color/secondary_background"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="410dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCodeChangeNumberPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNextCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_24dp_circle"
            android:backgroundTint="@color/grey"
            android:text="ПОЛУЧИТЬ КОД ПОВТОРНО 00:59"
            android:fontFamily="@font/roboto_medium"
            android:enabled="false"
            android:textColor="@color/grey_text_button"
            android:textStyle="bold"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="14dp"/>
        
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>