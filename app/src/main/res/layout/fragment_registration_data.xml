<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ViewAnimator
        android:id="@+id/viewAnimator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="118dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Введите ваше имя"
                    android:fontFamily="@font/roboto_black"
                    android:textStyle="bold"
                    android:textColor="@color/neutral_dark"
                    android:textSize="28sp"
                    android:textAllCaps="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Для завершения регистрации введите \nваше имя"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textColor="@color/grey_text_button"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <EditText
                    android:id="@+id/etFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/background_edittext_top_8dp_light_blue"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="18sp"
                    android:hint="Имя"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_text_button"
                    android:textStyle="normal"
                    android:inputType="textPersonName"
                    android:paddingStart="12dp"/>

                <EditText
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/background_edittext_bottom_8dp_light_blue"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="18sp"
                    android:hint="Фамилия"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_text_button"
                    android:textStyle="normal"
                    android:inputType="textPersonName"
                    android:paddingStart="12dp"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Введите ваше имя"
                    android:fontFamily="@font/roboto_black"
                    android:textStyle="bold"
                    android:textColor="@color/neutral_dark"
                    android:textSize="28sp"
                    android:textAllCaps="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Для завершения регистрации введите \nваше имя"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:textColor="@color/grey_text_button"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/tvFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/background_edittext_top_8dp_light_blue"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:textColor="@color/black"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/tvLastName"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/background_edittext_bottom_8dp_light_blue"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:textColor="@color/black"
                    android:textStyle="normal"/>

            </LinearLayout>

        </LinearLayout>

    </ViewAnimator>

    <LinearLayout
        android:id="@+id/linearLayoutBtnNextData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/viewAnimator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegisterData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_24dp_focus"
            android:backgroundTint="@color/secondary_background"
            android:fontFamily="@font/roboto_medium"
            android:enabled="false"
            android:textStyle="bold"
            android:gravity="center"
            android:text="ДАЛЕЕ"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/white"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>