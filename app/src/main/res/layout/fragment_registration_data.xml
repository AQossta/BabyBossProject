<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.registration_data.RegistrationDataFragment">

    <LinearLayout
        android:id="@+id/linearLayoutDataText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="118dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Введите ваше имя"
            android:fontFamily="@font/roboto_black"
            android:textStyle="bold"
            android:textColor="@color/neutral_dark"
            android:textSize="28dp"
            android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txtDescData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Для завершения регистрации введите \nваше имя"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16dp"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:textColor="@color/grey_text_button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCode" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tvTextData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutDataText"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutDataText"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:layout_width="370dp"
            android:layout_height="56dp"
            android:background="@drawable/background_edittext_top_8dp_light_blue"
            android:fontFamily="@font/roboto_regular"
            android:textSize="18dp"
            android:text="\t\t\tИмя"
            android:textColor="@color/grey_text_button"
            android:textStyle="normal"
            android:inputType="textPersonName"/>

        <EditText
            android:layout_width="370dp"
            android:layout_height="56dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/background_edittext_bottom_8dp_light_blue"
            android:fontFamily="@font/roboto_regular"
            android:textSize="18dp"
            android:text="\t\t\tФамилия"
            android:textColor="@color/grey_text_button"
            android:textStyle="normal"
            android:inputType="textPersonName"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutBtnNextData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="410dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTextData"
        app:layout_constraintStart_toStartOf="@+id/tvTextData"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegisterData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_24dp_focus"
            android:backgroundTint="@color/secondary_background"
            android:fontFamily="@font/roboto_medium"
            android:enabled="false"
            android:textStyle="bold"
            android:gravity="center"
            android:text="ДАЛЕЕ"
            android:textAllCaps="false"
            android:textSize="14dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/txtAgreement"
            app:layout_constraintStart_toStartOf="@id/txtDescRegis"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>