<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.add_photo_child.AddPhotoChildFragment">

    <include
        android:id="@+id/toolbarBackAddPhoto"
        layout="@layout/toolbar_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarBackAddPhoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Фото"
            android:fontFamily="@font/roboto_bold"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="28dp"
            android:layout_marginTop="16dp"/>

        <ImageButton
            android:id="@+id/imgAddChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_photo_child"
            android:backgroundTint="@color/fui_transparent"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="26dp"
            android:scaleType="center"/>

        <TextView
            android:id="@+id/changePhotoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ДОБАВИТЬ ФОТОГРАФИЮ"
            android:textColor="@color/secondary_background"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNextAddChildPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:background="@drawable/background_button_24dp_focus"
        android:text="ДАЛЕЕ"
        android:layout_marginHorizontal="16dp"
        android:textColor="@color/neutral_light"
        android:fontFamily="@font/roboto_bold"
        android:textSize="14dp"
        android:textAllCaps="false"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutPhoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>