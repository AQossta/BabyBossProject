<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".presentation.registration_payment.RegistrationPaymentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="108dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Способ оплаты"
            android:textSize="28dp"
            android:fontFamily="@font/roboto_bold"
            android:textStyle="bold"
            android:textColor="@color/neutral_dark"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавьте карту для совершения оплаты"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="@color/grey_text_button"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cardNumberInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/background_edittext_8dp_light_blue"
            app:hintEnabled="true"
            app:hintAnimationEnabled="true"
            app:boxBackgroundMode="none">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cardNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Номер карты"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="normal"
                android:textColor="@color/grey_text_button"
                android:inputType="number"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/validityPeriodInputLayout"
            android:layout_width="182dp"
            android:layout_height="56dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/background_edittext_8dp_light_blue"
            app:hintEnabled="true"
            app:hintAnimationEnabled="true"
            app:boxBackgroundMode="none">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/validityPeriodEditText"
                android:layout_width="182dp"
                android:layout_height="56dp"
                android:hint="Срок действия"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="normal"
                android:gravity="center"
                android:textColor="@color/grey_text_button"
                android:inputType="number"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/svvInputLayout"
            android:layout_width="182dp"
            android:layout_height="56dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/background_edittext_8dp_light_blue"
            app:hintEnabled="true"
            app:hintAnimationEnabled="true"
            app:boxBackgroundMode="none">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/svvEditText"
                android:layout_width="182dp"
                android:layout_height="56dp"
                android:hint="CVV/CVC"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="normal"
                android:gravity="center"
                android:textColor="@color/grey_text_button"
                android:inputType="number"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNextPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="410dp"
            android:layout_marginBottom="55dp"
            android:background="@drawable/background_button_24dp_action"
            android:backgroundTint="@color/grey"
            android:fontFamily="@font/roboto_medium"
            android:enabled="false"
            android:textStyle="bold"
            android:gravity="center"
            android:text="ДОБАВИТЬ КАРТУ"
            android:textAllCaps="false"
            android:textSize="14dp"
            android:textColor="@color/grey_text_button"/>

    </LinearLayout>

</ScrollView>