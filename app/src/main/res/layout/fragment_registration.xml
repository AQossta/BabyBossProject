<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.registration.RegistrationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="118dp"
                android:layout_marginStart="18dp"
                android:text="Регистрация"
                android:fontFamily="@font/roboto_black"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textColor="@color/neutral_dark"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/txtDescRegis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="На ваш WhatsApp будет выслан код"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="@color/grey_text_button"
                app:layout_constraintTop_toBottomOf="@+id/txtRegistration"
                app:layout_constraintStart_toStartOf="@+id/txtRegistration"/>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtDescRegis">

                <EditText
                    android:id="@+id/editTextNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_edittext_focus_action_8dp"
                    android:hint="Номер телефона"
                    android:drawablePadding="8dp"
                    android:backgroundTint="@color/light_blue"
                    android:inputType="phone"
                    android:paddingVertical="16dp"
                    android:paddingStart="16dp"
                    android:textColorHint="@color/neutral_dark"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/txtAgreement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/roboto_medium"
        android:linksClickable="true"
        android:text="@string/agreement_text"
        android:textAlignment="center"
        android:textColor="@color/neutral_dark"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnRegister"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="55dp"
        android:background="@drawable/background_button_24dp_action"
        android:backgroundTint="@color/grey"
        android:fontFamily="@font/roboto_medium"
        android:enabled="false"
        android:textStyle="bold"
        android:gravity="center"
        android:text="ДАЛЕЕ"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:textColor="@color/grey_text_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>